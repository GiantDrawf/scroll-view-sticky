page {
  height: 100%;
}
.intro {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.header {
  height: 200rpx;
  width: 100%;
  line-height: 200rpx;
  text-align: center;
  background-color: pink;
}
.scrollContainer {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
}

.listItem {
  width:100%;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  position: relative;
}
.listItem::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 0rpx;
  width: 100%;
  height: 2rpx;
  transform: scaleY(0.5);
  background-color: rgba(0,0,0,0.1);
}

.stickyWrapper {
  position: sticky;
  top: 0rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
  background-color: #000;
  color: #fff;
  z-index: 99;
}